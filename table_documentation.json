{
    "tables": [
      {
        "table_name": "sales",
        "description": "Table of sales made by the company.",
        "columns": [
          {
            "name": "sale_id",
            "type": "INTEGER",
            "description": "Unique identifier of the sale (primary key)."
          },
          {
            "name": "sale_date",
            "type": "DATE",
            "description": "Date of the sale."
          },
          {
            "name": "customer_id",
            "type": "INTEGER",
            "description": "Identifier of the customer who made the purchase."
          },
          {
            "name": "product_id",
            "type": "INTEGER",
            "description": "Identifier of the product sold."
          },
          {
            "name": "quantity",
            "type": "INTEGER",
            "description": "Quantity of items sold."
          },
          {
            "name": "unit_price",
            "type": "DECIMAL(10,2)",
            "description": "Unit price of the product at the time of sale."
          },
          {
            "name": "total_amount",
            "type": "DECIMAL(10,2)",
            "description": "Total value of the sale (quantity * unit_price)."
          },
          {
            "name": "region",
            "type": "VARCHAR(50)",
            "description": "Region where the sale was made."
          }
        ]
      },
      {
        "table_name": "customers",
        "description": "Table with customer information.",
        "columns": [
          {
            "name": "customer_id",
            "type": "INTEGER",
            "description": "Unique identifier of the customer (primary key)."
          },
          {
            "name": "customer_name",
            "type": "VARCHAR(100)",
            "description": "Full name of the customer."
          },
          {
            "name": "customer_email",
            "type": "VARCHAR(100)",
            "description": "Customer email."
          },
          {
            "name": "customer_city",
            "type": "VARCHAR(100)",
            "description": "Customer city."
          }
        ]
      },
      {
        "table_name": "products",
        "description": "Table with product information.",
        "columns": [
          {
            "name": "product_id",
            "type": "INTEGER",
            "description": "Unique identifier of the product (primary key)."
          },
          {
            "name": "product_name",
            "type": "VARCHAR(100)",
            "description": "Product name."
          },
          {
            "name": "category",
            "type": "VARCHAR(50)",
            "description": "Product category."
          }
        ]
      }
    ]
  }
  